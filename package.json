{
  "name": "bgm-mcp",
  "private": true,
  "type": "module",
  "scripts": {
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "start": "wrangler dev",
    "types": "wrangler types",
    "gen-v0-client": "openapi-typescript bgm-openapi/v0.yaml -o src/bgm-v0-client.gen.ts",
