    "gen-api-zod": "orval --input bgm-openapi/api.yaml --output src/bgm-api-zod.gen.ts --client zod"
  },
  "dependencies": {
    "@hono/mcp": "^0.1.5",
    "@hono/zod-validator": "^0.7.4",
